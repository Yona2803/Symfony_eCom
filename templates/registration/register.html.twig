
{% block body %}
<div class="flex items-center justify-center min-h-screen bg-gray-100">
    <div class="w-full max-w-md bg-white rounded-lg shadow-lg p-8">
        <h1 class="text-3xl font-bold text-center text-blue-500 mb-8">Register</h1>

        {{ form_start(registrationForm) }}
            <div class="input-container mb-6 text-center">
                {{ form_row(registrationForm.email) }}
            </div>

            <div class="input-container mb-6 text-center">
                {{ form_row(registrationForm.plainPassword) }}
            </div>

            <div class="input-container mb-6 text-center">
                {{ form_row(registrationForm.agreeTerms) }}
            </div>

            <div class="text-center">
                <button type="submit" class="submit-btn w-full">
                    Register
                </button>
            </div>
        {{ form_end(registrationForm) }}
        
        <div class="text-center mt-6">
            <p class="text-sm text-gray-600">Already have an account? <a href="{{ path('app_login') }}" class="text-blue-500 hover:underline">Login here</a></p>
        </div>
    </div>
</div>
{% endblock %}
