<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>Wishlist</title>
		<link rel="stylesheet" href="{{ asset('css/wishlistStyle.css') }}">
	</head>
	<body>
		<div class="container">
			<h1>Your Wishlist</h1>
			{% if wishlist.item|length > 0 %}
				<ul class="wishlist-items">
					{% for item in wishlist.item %}
						<li class="wishlist-item">
							<div class="item-image">
								{% if item.itemImage %}
									<img src="data:image/jpeg;base64,{{ item.itemImage|base64_encode }}" alt="{{ item.name }}" width="100">
								{% else %}
									No image
								{% endif %}
							</div>
							<div class="item-details">
								<h2>{{ item.name }}</h2>
								<p>{{ item.description }}</p>
								<p>Price: {{ item.price }} DHs</p>
								<div class="item-actions">
                                <a href="{{ path('delete_item', {'itemId': item.id}) }}">
									<button type="button" class="btn-delete">Delete</button>
                                </a>
									<button class="btn-buy">Buy</button>
								</div>
							</div>
						</li>
					{% endfor %}
				</ul>
			{% else %}
				<p>Your wishlist is empty.</p>
			{% endif %}
		</div>
		
	</body>
</html>
