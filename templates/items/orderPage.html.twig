<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Orders Details</title>
</head>
<body>
    {{ include('items/dashBoard.html.twig') }}

		<div class="main-content">
			<div>
				<table>
					<thead>
						<tr>
							<th>Customer</th>
							<th>Product Details</th>
							<th>Options</th>
						</tr>
					</thead>
					<tbody>
						{% for order in orders %}
							<tr id="customer-{{ order.id}}">
								<td>
                                {{ order.id }}
                                {# {{ order.orderDate }} #}
                                {{ order.totalAmount }}
                                </td>

								<td>
                                {{ order.users.id }}
                                {{ order.users.name }}
                                </td>

								<td>
									<div class="customer-actions">
										<button type="button" class="btn-delete" onclick="deleteCustomer('{{ customer.id }}')">Delete</button>
										<button type="button" class="btn-something">something...</button>
									</div>
								</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		</div>
</body>
</html>