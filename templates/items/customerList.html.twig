<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>Customer Details</title>
		<link rel="stylesheet" href="{{ asset('css/customerListStyle.css') }}">
        <link rel="icon" type="image/x-icon" href="{{ asset('img/icon/Icon.png') }}">
	</head>
	<body>
		{{ include('items/dashBoard.html.twig') }}

		<div class="main-content">
			<div>
				<h1>Customer Details</h1>
				<table>
					<thead>
						<tr>
							<th>ID</th>
							<th>First Name</th>
							<th>Last Name</th>
							<th>Email</th>
							<th>Phone</th>
							<th>Option</th>
						</tr>
					</thead>
					<tbody>
						{% for customer in customers %}
							<tr id="customer-{{ customer.id}}">
								<td>{{ customer.id }}</td>
								<td>{{ customer.firstName }}</td>
								<td>{{ customer.lastName }}</td>
								<td>{{ customer.email }}</td>
								<td>{{ customer.phoneNumber }}</td>
								<td>
									<div class="customer-actions">
										<button type="button" class="btn-delete" onclick="deleteCustomer('{{ customer.id }}')">Delete</button>
										<button type="button" class="btn-something">something...</button>
									</div>
								</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		</div>
		<script src="{{ asset('Pages/CustomersPage/main.js') }}"></script>
	</body>
</html>
